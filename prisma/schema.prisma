// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  name       String
  email      String    @unique
  price_hour Float     @default(0.0)
  password   String
  createdAt  DateTime
  updatedAt  DateTime
  project    Project[]

  @@map("users")
}

model Project {
  id          Int         @id @default(autoincrement())
  name        String
  client      String
  description String
  cost        Float       @default(0.0)
  createdAt   DateTime 
  updatedAt   DateTime
  user        User        @relation(fields: [userId], references: [id])
  userId      Int
  expense     Expense[]
  userStore   UserStore[]

  @@map("projects")
}

model Expense {
  id        Int      @id @default(autoincrement())
  name      String
  cost      Float    @default(0.0)
  createdAt  DateTime
  project   Project  @relation(fields: [projectId], references: [id])
  projectId Int

  @@map("expenses")
}

model UserStore {
  id         Int      @id @default(autoincrement())
  name       String
  decription String
  createdAt  DateTime
  project    Project  @relation(fields: [projectId], references: [id])
  projectId  Int
  task       Task[]

  @@map("userStores")
}

model Task {
  id          Int        @id @default(autoincrement())
  name        String
  description String
  completed   Boolean    @default(false)
  duration    Int
  complexity  String
  createdAt   DateTime
  updatedAt   DateTime
  userStore   UserStore @relation(fields: [userStoreId], references: [id])
  userStoreId Int

  @@map("tasks")
}
